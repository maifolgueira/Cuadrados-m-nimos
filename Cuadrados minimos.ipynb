#C

def genera_ajustador(c,tipo):
    if tipo == "polinomial":
       def function(s):
            A = 0
            for j in range(len(c)):
                A += c[j]* s**j
            return (A)
    elif tipo== "senoidal":
        def function(s):
            A=0
            for j in range(len(c)):
                A += c[j]*np.sin((j+1)*s)
            return(A)
    return(function)


